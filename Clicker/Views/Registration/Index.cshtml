@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var errorMessage = TempData["IsUsernameTaken"] as string;
}
<div>Введите логин и пароль </div>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
 
</head>
<body>
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="custom-error" role="alert">
            @errorMessage
        </div>
    }


    <form action="Registration/Index" method="post">
        <p>Login: <input name="login" /></p>
        <p>Password: <input name="password" /></p>
        <input type="submit" value="Send" />
    </form>

</body>
</html>